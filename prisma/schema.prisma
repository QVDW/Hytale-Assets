generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String   @id @default(cuid())
  name                  String
  mail                  String   @unique
  password              String
  rank                  String   @default("Werknemer") // Developer, Eigenaar, Manager, Werknemer
  twoFactorSecret       String?
  twoFactorEnabled      Boolean  @default(false)
  twoFactorBackupCodes  Json?    // Array of {code, used, usedAt}
  twoFactorSetupCompleted Boolean @default(false)
  loginAttempts         Json     @default("{}") // {failedCount, lastFailedAttempt, lockedUntil, totalAttempts}
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")
  
  loginHistory          LoginHistory[]
  errorLogs             ErrorLog[]
  sessions              UserSession[]
  
  @@index([rank])
  @@map("users")
}

model Item {
  id          String    @id @default(cuid())
  name        String
  category    String
  tags        String[]
  image       String?
  link        String?
  releaseDate DateTime? @map("releaseDate")
  isFeatured  Boolean   @default(false)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  
  @@index([category])
  @@index([isActive])
  @@index([isFeatured])
  @@map("items")
}

model FAQ {
  id        String   @id @default(cuid())
  question  String
  answer    String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("faqs")
}

model LoginHistory {
  id            String   @id @default(cuid())
  userId        String
  email         String
  loginAttempt  Json     // {success, failureReason, timestamp}
  deviceInfo    Json     // {userAgent, browser, os, device, isMobile}
  location      Json     // {ipAddress, country, region, city, timezone, coordinates}
  sessionInfo   Json?    // {sessionToken, sessionDuration, logoutTime, logoutReason}
  security      Json     // {isFirstLogin, isSuspiciousActivity, suspiciousReasons, riskScore}
  createdAt     DateTime @default(now()) @map("created_at")
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([email])
  @@index([createdAt(sort: Desc)])
  @@map("login_history")
}

model UserSession {
  id            String    @id @default(cuid())
  userId        String
  sessionToken  String    @unique
  jwtToken      String
  deviceInfo    Json      // {userAgent, browser, os, device, isMobile}
  location      Json      // {ipAddress, country, region, city, timezone, coordinates}
  loginTime     DateTime  @default(now())
  lastActivity  DateTime  @default(now())
  expiresAt     DateTime
  isActive      Boolean   @default(true)
  logoutTime    DateTime?
  logoutReason  String?   // manual, timeout, force_logout, token_expired
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, isActive])
  @@index([sessionToken])
  @@index([jwtToken])
  @@index([expiresAt])
  @@index([lastActivity])
  @@map("user_sessions")
}

model ErrorLog {
  id            String    @id @default(cuid())
  message       String
  stack         String?
  level         String    @default("error") // error, warning, info, debug
  source        String?
  userId        String?
  userAgent     String?
  ipAddress     String?
  url           String?
  method        String?
  requestBody   Json?
  responseStatus Int?
  resolved      Boolean   @default(false)
  resolvedBy    String?
  resolvedAt    DateTime?
  tags          String[]
  metadata      Json?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  user          User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  @@index([level])
  @@index([resolved])
  @@index([source])
  @@index([createdAt(sort: Desc)])
  @@map("error_logs")
}

model Footer {
  id            String   @id @default(cuid())
  columns       Json     // Array of {title, items: [{text, link, isExternal}]}
  socialMedia   Json     // {youtube, facebook, instagram, twitter, linkedin}
  contactInfo   Json     // {name, address, phone, email}
  backgroundColor String @default("#202020")
  textColor     String   @default("#fefefe")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  
  @@map("footers")
}

model LegalSettings {
  id            String   @id @default(cuid())
  disclaimer    String   @default("")
  privacyPolicy String   @default("")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@map("legal_settings")
}

enum UserRole {
  regular
  admin
}

enum UserStatus {
  active
  banned
}

model UserAccount {
  user_id        String     @id @default(cuid()) @map("user_id")
  username       String     @unique
  email          String     @unique
  hashed_password String    @map("hashed_password")
  join_date      DateTime   @default(now()) @map("join_date")
  last_login     DateTime?  @map("last_login")
  profile_picture String    @map("profile_picture")
  user_role      UserRole   @default(regular) @map("user_role")
  status         UserStatus @default(active)
  createdAt      DateTime   @default(now()) @map("created_at")
  updatedAt      DateTime   @updatedAt @map("updated_at")
  
  // Asset relations
  uploadedAssets Asset[]
  downloads      Download[]
  likes          Like[]
  reviews        Review[]
  favorites      UserFavorite[]
  reports        AssetReport[]
  
  @@index([username])
  @@index([email])
  @@index([user_role])
  @@index([status])
  @@map("user_accounts")
}

enum AssetStatus {
  pending
  approved
  rejected
}

enum ReviewStatus {
  active
  removed
}

enum ReportStatus {
  open
  reviewed
  resolved
}

enum OverviewSectionType {
  image
  youtube
  text
}

model Category {
  category_id        String     @id @default(cuid()) @map("category_id")
  name               String
  parent_category_id String?    @map("parent_category_id")
  description        String?
  icon_url           String?    @map("icon_url")
  sort_order         Int        @default(0) @map("sort_order")
  createdAt          DateTime   @default(now()) @map("created_at")
  updatedAt          DateTime   @updatedAt @map("updated_at")
  
  // Self-referential relationship for parent/child categories
  parent             Category?  @relation("CategoryHierarchy", fields: [parent_category_id], references: [category_id], onDelete: SetNull)
  children           Category[] @relation("CategoryHierarchy")
  
  // Asset relation
  assets             Asset[]
  
  @@index([parent_category_id])
  @@index([sort_order])
  @@map("categories")
}

model Asset {
  asset_id       String      @id @default(cuid()) @map("asset_id")
  uploader_id    String      @map("uploader_id")
  category_id    String      @map("category_id")
  title          String
  description    String
  file_url       String      @map("file_url")
  preview_url    String?     @map("preview_url")
  logo_url       String?     @map("logo_url")
  version        String      @default("1.0.0")
  upload_date    DateTime    @default(now()) @map("upload_date")
  last_update    DateTime    @updatedAt @map("last_update")
  download_count Int         @default(0) @map("download_count")
  tags           String[]
  status         AssetStatus @default(approved)
  compatibility  String?     // Game version compatibility
  isPromoted     Boolean     @default(false) @map("is_promoted")
  
  // Relations
  uploader       UserAccount @relation(fields: [uploader_id], references: [user_id], onDelete: Cascade)
  category       Category    @relation(fields: [category_id], references: [category_id], onDelete: Restrict)
  versions       AssetVersion[]
  downloads      Download[]
  likes          Like[]
  reviews        Review[]
  favorites      UserFavorite[]
  reports        AssetReport[]
  metadata       AssetMetadata[]
  overviewSections AssetOverviewSection[]
  
  @@index([uploader_id])
  @@index([category_id])
  @@index([status])
  @@index([isPromoted])
  @@index([upload_date(sort: Desc)])
  @@index([download_count(sort: Desc)])
  @@map("assets")
}

model AssetVersion {
  version_id    String   @id @default(cuid()) @map("version_id")
  asset_id      String   @map("asset_id")
  version_number String  @map("version_number")
  file_url      String   @map("file_url") // For plugins: GitHub release link
  changelog     String?
  upload_date   DateTime @default(now()) @map("upload_date")
  
  asset         Asset    @relation(fields: [asset_id], references: [asset_id], onDelete: Cascade)
  
  @@index([asset_id])
  @@index([upload_date(sort: Desc)])
  @@map("asset_versions")
}

model Download {
  download_id   String     @id @default(cuid()) @map("download_id")
  user_id       String     @map("user_id")
  asset_id      String     @map("asset_id")
  download_date DateTime   @default(now()) @map("download_date")
  ip_address    String?    @map("ip_address")
  
  user          UserAccount @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  asset         Asset       @relation(fields: [asset_id], references: [asset_id], onDelete: Cascade)
  
  @@index([user_id])
  @@index([asset_id])
  @@index([download_date(sort: Desc)])
  @@map("downloads")
}

model Like {
  like_id   String   @id @default(cuid()) @map("like_id")
  user_id   String   @map("user_id")
  asset_id  String   @map("asset_id")
  liked_at DateTime @default(now()) @map("liked_at")
  
  user      UserAccount @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  asset     Asset       @relation(fields: [asset_id], references: [asset_id], onDelete: Cascade)
  
  @@unique([user_id, asset_id])
  @@index([asset_id])
  @@index([liked_at(sort: Desc)])
  @@map("likes")
}

model Review {
  review_id   String       @id @default(cuid()) @map("review_id")
  user_id     String       @map("user_id")
  asset_id    String       @map("asset_id")
  rating      Int          // 1-5
  title       String?
  review_text String       @map("review_text")
  review_date DateTime     @default(now()) @map("review_date")
  status      ReviewStatus @default(active)
  
  user        UserAccount  @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  asset       Asset        @relation(fields: [asset_id], references: [asset_id], onDelete: Cascade)
  
  @@index([asset_id])
  @@index([user_id])
  @@index([rating])
  @@index([review_date(sort: Desc)])
  @@index([status])
  @@map("reviews")
}

model UserFavorite {
  favorite_id  String   @id @default(cuid()) @map("favorite_id")
  user_id      String   @map("user_id")
  asset_id     String   @map("asset_id")
  favorited_at DateTime @default(now()) @map("favorited_at")
  
  user         UserAccount @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  asset        Asset       @relation(fields: [asset_id], references: [asset_id], onDelete: Cascade)
  
  @@unique([user_id, asset_id])
  @@index([user_id])
  @@index([asset_id])
  @@index([favorited_at(sort: Desc)])
  @@map("user_favorites")
}

model AssetReport {
  report_id   String       @id @default(cuid()) @map("report_id")
  user_id     String       @map("user_id")
  asset_id    String       @map("asset_id")
  reason      String
  report_date DateTime     @default(now()) @map("report_date")
  status      ReportStatus @default(open)
  
  user        UserAccount  @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  asset       Asset        @relation(fields: [asset_id], references: [asset_id], onDelete: Cascade)
  
  @@index([asset_id])
  @@index([user_id])
  @@index([status])
  @@index([report_date(sort: Desc)])
  @@map("asset_reports")
}

model AssetMetadata {
  metadata_id String   @id @default(cuid()) @map("metadata_id")
  asset_id    String   @map("asset_id")
  key         String
  value       String   // JSON/text
  
  asset       Asset    @relation(fields: [asset_id], references: [asset_id], onDelete: Cascade)
  
  @@index([asset_id])
  @@index([key])
  @@map("asset_metadata")
}

model AssetOverviewSection {
  section_id   String              @id @default(cuid()) @map("section_id")
  asset_id     String              @map("asset_id")
  section_type OverviewSectionType @map("section_type")
  content      String              // Image URL, YouTube URL, or text content
  order        Int                 @default(0) // For ordering sections
  createdAt    DateTime            @default(now()) @map("created_at")
  updatedAt    DateTime            @updatedAt @map("updated_at")
  
  asset        Asset               @relation(fields: [asset_id], references: [asset_id], onDelete: Cascade)
  
  @@index([asset_id])
  @@index([asset_id, order])
  @@map("asset_overview_sections")
}

